# Visey Recommender Configuration Template
# Copy this file to .env and update with your values

# WordPress API Configuration
WP_BASE_URL=https://your-wordpress-site.com
WP_AUTH_TYPE=none
# Options: none, basic, jwt, application_password

# Basic Authentication
WP_USERNAME=your_username
WP_PASSWORD=your_password

# JWT Authentication (requires JWT plugin)
WP_JWT_TOKEN=your_jwt_token_here

# Application Password (WordPress 5.6+)
WP_APP_PASSWORD=your_application_password_here

# WordPress API Settings
WP_RATE_LIMIT=60
WP_TIMEOUT=30
WP_BATCH_SIZE=100
WP_SYNC_INTERVAL=30
WP_CACHE_FALLBACK=true

# Cache Configuration
CACHE_BACKEND=auto
# Options: auto, redis, sqlite

# Redis Configuration (if using Redis)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Database Configuration
DATA_DIR=./data
SQLITE_CACHE_PATH=./data/cache.db
SQLITE_FEEDBACK_PATH=./data/feedback.db

# Recommendation Algorithm Weights
TOP_N=10
CONTENT_WEIGHT=0.6
COLLAB_WEIGHT=0.3
POP_WEIGHT=0.1
EMB_WEIGHT=0.0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Frontend Configuration
FRONTEND_HOST=localhost
FRONTEND_PORT=3000

# Monitoring and Logging
LOG_LEVEL=INFO
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Security
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Development Settings
DEBUG=false
RELOAD=false

# Load Balancer Settings
NGINX_PORT=80
NGINX_SSL_PORT=443
HAPROXY_PORT=8081
HAPROXY_SSL_PORT=8443

# Docker Settings
COMPOSE_PROJECT_NAME=visey-recommender
DOCKER_REGISTRY=

# Kubernetes Settings
K8S_NAMESPACE=visey
K8S_REPLICAS=3
K8S_STORAGE_CLASS=fast-ssd